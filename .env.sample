# .env.sample
#
# Sample environment variables for the chunky-monkey project.
# Copy this file to `.env` and fill in your actual secrets and configuration.
# Do NOT commit your real `.env` file to version control.

# OpenAI API Key (required for uploading to Vector Store)
OPENAI_API_KEY=

# Knowledge Base API Endpoint (e.g., Zendesk)
KNOWLEDGE_BASE_API_URL=

# Knowledge Base API Token (for authentication)
KNOWLEDGE_BASE_API_TOKEN=

# System prompt for the OpenAI Assistant (optional, can be set in code)
OPENAI_ASSISTANT_SYSTEM_PROMPT=

# Log level (e.g., INFO, DEBUG)
LOG_LEVEL=INFO
